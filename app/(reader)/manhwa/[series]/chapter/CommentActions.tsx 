"use client";

/* ---------------- Types ---------------- */

type Props = {
  isOwner: boolean;
  likes: number;
  dislikes: number;

  onLike: () => void;
  onDislike: () => void;
  onReply: () => void;
  onEdit: () => void;
  onDelete: () => void;
};

/* ---------------- Component ---------------- */

export default function CommentActions({
  isOwner,
  likes,
  dislikes,
  onLike,
  onDislike,
  onReply,
  onEdit,
  onDelete,
}: Props) {
  return (
    <div className="comment-actions">
      <button onClick={onLike}>ğŸ‘ {likes}</button>
      <button onClick={onDislike}>ğŸ‘ {dislikes}</button>

      <button onClick={onReply}>Reply</button>

      {isOwner && (
        <>
          <button onClick={onEdit}>Edit</button>
          <button
            className="danger"
            onClick={onDelete}
          >
            Delete
          </button>
        </>
      )}
    </div>
  );
}
